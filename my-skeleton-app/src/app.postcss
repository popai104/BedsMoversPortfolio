@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;
@import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@100;500&display=swap');

* {
	font-family: JetBrains Mono, monospace;
}
html,
body {
	@apply h-full overflow-visible;
}

.bg-dark-blurred {
	background-color: rgba(1,1,1, 0.4);
	z-index: 999;
	@apply backdrop-filter backdrop-blur-xl bg-opacity-50;
}